@page
@model Forum.Controller.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_ViewImports.cshtml";
}

<h1>Edit</h1>

<h4>Reply</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reply.Id" />
            <div class="form-group">
                <label asp-for="Reply.Title" class="control-label"></label>
                <input asp-for="Reply.Title" class="form-control" />
                <span asp-validation-for="Reply.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reply.Text" class="control-label"></label>
                <input asp-for="Reply.Text" class="form-control" />
                <span asp-validation-for="Reply.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reply.ThreadId" class="control-label"></label>
                <select asp-for="Reply.ThreadId" class="form-control" asp-items="ViewBag.ThreadId"></select>
                <span asp-validation-for="Reply.ThreadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
