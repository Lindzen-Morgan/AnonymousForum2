@if (Model.Reply != null)
{
    <div>
        <h4>Reply</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Reply.Title</dd>
            <dt class="col-sm-2">Text</dt>
            <dd class="col-sm-10">@Model.Reply.Text</dd>
            <dt class="col-sm-2">Thread Id</dt>
            <dd class="col-sm-10">@Model.Reply.Thread?.Id</dd>
        </dl>
    </div>
}
else
{
    <p>Reply not found.</p>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reply.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
