@{
    Forum.Models.Thread? thread= Model.Thread as Forum.Models.Thread;
}

@if (thread != null && thread.DiscussionSubject != null)
{
    <div>
        <h4>Thread</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@thread.Title</dd>
            <dt class="col-sm-2">Text</dt>
            <dd class="col-sm-10">@thread.Text</dd>
            <dt class="col-sm-2">Discussion Subject ID</dt>
            <dd class="col-sm-10">@thread.DiscussionSubject.Id</dd>
        </dl>

        <form method="post">
            <input type="hidden" name="Id" value="@thread.Id" />

            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>

    </div>
}
else
{
    <p>Thread not found.</p>
}
